@{
}
@model Book

<div class="card">
    <div class="card-header">
        <h4 class="card-title">@Model.Title</h4>
    </div>
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center">
            <span class="text-muted" style="font-size: small;">ISBN: @Model.Isbn</span>
            <span class="badge rounded-pill bg-info">Price: $@Model.Price</span>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Author: @Model.Author</li>
            <li class="list-group-item">Publisher: @Model.Publisher</li>
            <li class="list-group-item">Category: @Model.Category</li>
            <li class="list-group-item">@Model.PageCount pages</li>
        </ul>
    </div>
</div>
